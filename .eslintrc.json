{
  "env": {
    "browser": true,
    "es2021": true
  },
  "globals": {
    "Phaser": "readonly",
    "CONFIG": "writable",
    "Player": "writable",
    "Enemy": "writable",
    "Boss": "writable",
    "Projectile": "writable",
    "PowerUp": "writable",
    "Asteroid": "writable",
    "GameScene": "writable",
    "performance": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "script"
  },
  "rules": {
    "no-unused-vars": ["warn", { "args": "none", "varsIgnorePattern": "^(GameScene|Player|Enemy|Boss|Projectile|PowerUp|Asteroid|CONFIG)$" }],
    "no-undef": "error",
    "eqeqeq": ["error", "always"],
    "no-var": "error",
    "prefer-const": ["warn", { "destructuring": "all" }],
    "curly": ["error", "all"],
    "no-duplicate-case": "error",
    "no-empty": "warn",
    "no-extra-semi": "error",
    "no-unreachable": "error",
    "no-constant-condition": "warn",
    "no-debugger": "warn",
    "no-dupe-args": "error",
    "no-dupe-keys": "error",
    "no-func-assign": "error",
    "no-inner-declarations": "error",
    "no-irregular-whitespace": "error",
    "no-redeclare": "off",
    "no-self-assign": "error",
    "no-shadow": "warn",
    "no-throw-literal": "error",
    "no-use-before-define": ["warn", { "functions": false, "classes": false }],
    "default-case": "warn",
    "guard-for-in": "warn",
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-new-wrappers": "error",
    "no-with": "error",
    "radix": "error"
  }
}
